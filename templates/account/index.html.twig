{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes un administrateur, accédez au BackOffice ?</a></small>
    {% endif %}
    <p>
        Bienvenue {{ app.user.firstname|upper }} dans votre compte.<br/>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.
    </p>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/password.png') }}" alt="password">
                <br/>
                <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/address.png') }}" alt="addresses">
                <br/>
                <a href="{{ path('app_account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/order.png') }}" alt="orders">
                <br/>
                <a href="{{ path('app_account_orders') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}
